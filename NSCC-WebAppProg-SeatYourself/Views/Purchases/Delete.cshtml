@model NSCC_WebAppProg_SeatYourself.Models.Purchase

@{
    ViewData["Title"] = "Delete Purchase";
}

<h1 class="text-center">Delete Purchase</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h4 class="text-center">Purchase</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PurchaseId)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PurchaseId)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.NumTicketsOrdered)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NumTicketsOrdered)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CustomerFirstName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CustomerFirstName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CustomerLastName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CustomerLastName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CustomerEmail)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CustomerEmail)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CustomerPhone)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CustomerPhone)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CreditCardNumber)
                </dt>
                <dd class="col-sm-8">
                    @("**** **** **** " + Model.CreditCardNumber!.Substring(Model.CreditCardNumber.Length - 4))
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PurchaseDate)
                </dt>
                <dd class="col-sm-8">
                    @Model.PurchaseDate.ToString("yyyy-MM-dd")
                </dd>
                <dt class="col-sm-4">
                    Occasion
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Occasion!.Title)
                </dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="PurchaseId" />
                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
