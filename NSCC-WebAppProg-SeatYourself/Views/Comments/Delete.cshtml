@model NSCC_WebAppProg_SeatYourself.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h1 class="text-center">Delete Comment</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h4 class="text-center">Comment</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CommentId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CommentId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Author)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Body)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Body)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreateDatet)
                </dt>
                <dd class="col-sm-10">
                    @Model.CreateDatet.ToString("yyyy-MM-dd HH:mm")
                </dd>
                <dt class="col-sm-2">
                    Occasion
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Occasion!.Title)
                </dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="CommentId" />
                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
