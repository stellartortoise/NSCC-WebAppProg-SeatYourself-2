@model List<NSCC_WebAppProg_SeatYourself.Models.Occasion>
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="display-4 text-center">Upcoming Occasions</h1>

<br />
<br />
<br />


<div class="container">
    @foreach (var occasion in Model)
    {
        var venue = occasion.Venue;
        <div class="e-card d-flex align-items-center mb-3 rounded bg-light shadow-sm" style="height: 140px; transition: box-shadow 0.2s, transform 0.2s;">
            <div class="flex-shrink-0 overflow-hidden" style="height: 140px; width: 180px;">
                @if (!String.IsNullOrEmpty(occasion.Filename))
                {
                    <img src="@occasion.Filename" alt="@occasion.Title" style="height: 140px; width: 180px; object-fit: cover; border-radius: 8px;" />
                }
            </div>
            <div class="flex-grow-1 px-3" style="padding-top: 4px; padding-bottom: 4px;">
                <h4 class="mb-1">@occasion.Title</h4>
                <p class="mb-1">@occasion.Description</p>
                <p class="mb-0"><small><strong>Date:</strong> @occasion.Date.ToString("MMMM dd, yyyy")</small></p>
                <p class="mb-0"><small><strong>Time:</strong> @occasion.Time.ToString("hh:mm tt")</small></p>
                <p class="mb-0"><small><strong>Location:</strong> @venue?.Location</small></p>
            </div>
            <div class="flex-shrink-0 text-end px-3">
                <a asp-controller="Occasions" asp-action="Details" asp-route-id="@occasion.OccasionId" class="btn btn-success">View Details</a>
            </div>
        </div>
    }
</div>
